<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchment"
    android:orientation="vertical"
    tools:context=".TabFragment">

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score0"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="100dp"/>
        <TextView
            android:id="@+id/score1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="160dp"/>
        <TextView
            android:id="@+id/score2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="220dp"/>
        <TextView
            android:id="@+id/score3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="280dp"/>
        <TextView
            android:id="@+id/score4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="340dp"/>
        <TextView
            android:id="@+id/score5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="400dp"/>
        <TextView
            android:id="@+id/score6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="460dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/rollType"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="@string/roll"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/saveRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        android:background="@color/parchmentBeige"
        android:text="Save" />

    <Spinner
        android:id="@+id/selection_type_roll"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"/>

</RelativeLayout>