<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/parchment"
    tools:context=".help">

    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar">
    </include>

    <ImageButton
        android:id="@+id/rules_button"
        android:layout_width="162dp"
        android:layout_height="151dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/status_effects_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintVertical_bias="0.299"
        app:srcCompat="@drawable/d20transparent" />

    <ImageButton
        android:id="@+id/status_effects_button"
        android:layout_width="162dp"
        android:layout_height="151dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:backgroundTint="@color/colorAccent"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rules_button"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="@drawable/d20transparent" />


    <TextView
        android:id="@+id/rulesPage"
        android:layout_width="78dp"
        android:layout_height="40dp"
        android:text="@string/rules"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/rules_button"
        app:layout_constraintEnd_toEndOf="@+id/rules_button"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/rules_button"
        app:layout_constraintTop_toTopOf="@+id/rules_button"
        app:layout_constraintVertical_bias="0.504" />

    <TextView
        android:id="@+id/statusEffectText"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:text="@string/statusEffect"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/status_effects_button"
        app:layout_constraintEnd_toEndOf="@+id/status_effects_button"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="@+id/status_effects_button"
        app:layout_constraintTop_toTopOf="@+id/status_effects_button"
        app:layout_constraintVertical_bias="0.445" />

</android.support.constraint.ConstraintLayout>